  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">image</th>
          <th scope="col">title</th>
          <th scope="col">author</th>
          <th scope="col">price</th>
          <th scope="col">actions</th>
        </tr>
      </thead>
      <tbody>
        <%for (let book of books) {%>
          <tr>
            <th><img src="/uploads/<%= book.image%>" width="50" height="50"></th>
            <td>
              <%= book.title%>
            </td>
            <td>
              <%= book.author%>
            </td>
            <td>
              <%= book.price%>
            </td>
            <td><a class="btn btn-danger" href="/deleteBooks/<%= book._id%>">Delete</a>
              <a class="btn btn-primary" href="/updateBooks/<%= book._id%>">Update</a>
            </td>
          </tr>
          <%}%>
      </tbody>
    </table>
  </div>
